@{
    ViewBag.Title = "Update Post";
}
<!DOCTYPE html>
<html lang="ru">
<head>
   <meta charset="utf-8">
   <title>Update Post</title>
   <link rel="stylesheet" href="~/css/style-create.css">
</head>

<body>
 <form asp-action="UpdatePost" asp-controller="ProfilePage" method="post" enctype="multipart/form-data">
    @if(ViewBag.ErrorMsg!=null)
    {
        <p>
            <label style="font-size:16px; color:deepskyblue">@ViewBag.ErrorMsg</label>
        </p>
    }
    <p>
        <label>Описание</label>
        <input name="description" value="@ViewBag.Post.Description" class="form-control" />
    </p>
    <p>
        <label>Местоположение</label>
        <input name="location" value="@ViewBag.Post.Location" class="form-control" />
    </p>
    <p>
        <input name="postid" value="@ViewBag.Post.Id" type="hidden">
        <input type="submit" value="Изменить" class="btnclass" />
    </p>
    <p>
        <input onclick="history.back();" class="btnclass" value="Вернуться назад" type="button">
    </p>
</form>
<div style=" position: absolute; bottom: 0; right: 0;"class="container">
