@model Shace.Models.RegisterModel;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Регистрация</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style-reg.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100&family=Pacifico&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0; /* Убираем отступы */
            height: 100%;
            background-position: center;
            background-size: cover;
        }
    </style>
</head>
<body>

    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="false" class="Register"> 

            <span style="display:block; font-size:16px;margin-top:80px; margin-left:50px; margin-right:30px; text-align:left; color:deepskyblue" asp-validation-for="Email"></span>
            <span style="display:block; font-size:16px;margin-top:0px; margin-left:50px; margin-right:30px; text-align:left; color:deepskyblue" asp-validation-for="ShortName"></span>
            <span style="display:block; font-size:16px;margin-top:0px; margin-left:50px; margin-right:30px; text-align:left; color:deepskyblue" asp-validation-for="Password"></span>
            <span style="display:block; font-size:16px;margin-top:0px; margin-left:50px; margin-right:30px; margin-bottom: 15px; text-align:left; color:deepskyblue" asp-validation-for="ConfirmPassword"></span>

        <div style="display:block;font-size:16px;margin-left:50px; margin-right:30px; text-align:left; color:deepskyblue" class="validation" asp-validation-summary="ModelOnly"></div>
            <h1 style="font-family: 'Pacifico', cursive;  font-size: 60px; color: black;">Shace</h1>
		<div> 
           
			<p style="font-family: sans-serif;  font-size: 20px; color:black;">
                Зарегистрируйтесь, чтобы смотреть фото и видео ваших друзей.</p>
            <div >
                <input type="text" asp-for="Email" placeholder="Электронная почта" />
               
            </div>
            <div>
                <input type="text" asp-for="ShortName" placeholder="Имя пользователя" />
              
            </div>
            <div>
                <input type="password" asp-for="Password" placeholder="Пароль" />
               
            </div>
            <div>
                <input type="password" asp-for="ConfirmPassword" placeholder="Подтвердите пароль" />
                
            </div>
            <div>
                <input type="submit" value="Регистрация" id = "button" />
                <a class="Login" href="/Account/Login">Войти в существующий аккаунт<br></a>
            </div>
		<div>
		  <p style="font-family: sans-serif;  font-size: 10px; color:grey;">
                    Регистрируясь, вы принимате наши <a href="/Home/Privacy"<b>Условия</b></a>.
                    Прочитайте <a href="/Home/Privacy"<b>Политику использования данных</b></a>,
                    чтобы узнать, как мы получаем, используем и 
                    передаем ваши данные, а также просмотрите 
                    <a href="/Home/Privacy"<b>Политику в отношении файлов cookie</b></a>,чтобы 
                    узнать, как мы используем файлы cookie и 
                    подобные технологи.
                </p>
		</div>
        </div>
    </form>
</body>

</html>
