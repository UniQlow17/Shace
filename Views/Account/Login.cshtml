@model Shace.Models.LoginModel;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Авторизация</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style-log.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100&family=Pacifico&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0; /* Убираем отступы */
            height: 100%;
            background-position: center;
            background-size: cover;
        }
    </style>
</head>
<body>
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="Login">
        <div class="validation" style="display:block;font-size:16px;margin-left:50px; margin-right:30px; text-align:left; color:deepskyblue" asp-validation-summary="ModelOnly"> </div>  
           <span style="display:block;font-size:16px;margin-left:50px; margin-right:30px; text-align:left; color:deepskyblue" asp-validation-for="Email"></span>
           <span style="display:block;font-size:16px;margin-left:50px; margin-right:30px; margin-bottom:15px; text-align:left; color:deepskyblue" asp-validation-for="Password"></span>
        <h1 style="font-family: 'Pacifico', cursive;  font-size: 80px; color: black;">Shace</h1>

        <div class="form-group">
            <input type="text" asp-for="Email" placeholder="Почта"/>
           
        </div>

        <div class="form-group">
            <input type="password" asp-for="Password" placeholder="Пароль" />
           
        </div>

        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark"/>
            <a class="Register" href="/Account/Register">Регистрация</a>
        </div>
    </form>
</body>

</html>
